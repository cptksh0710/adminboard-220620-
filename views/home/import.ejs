</script>

<body>
  <!-- NAVBAR ======================================== -->
  <%- include('../partials/navbar');%>
    <!-- WRAPPER ===================================== -->
    <div class="wrapper">
      <!-- SIDEBAR =================================== -->
      <%- include('../partials/sidebar');%>
        <!-- MAIN CONTENT ========================================= -->
        <div class="container-fluid">
          <div class="row">
            <div class="col-xs-12">
              <h3 class="page-header">
                자료 등록
              </h3>
            </div>
          </div> <!-- / .row -->
          <div class="row">
            <div class="col-xs-12">
              <!-- Basic form -->
              <div class="panel panel-default">
                <div class="panel-heading">
                </div>
                <div class="panel-body">
                  <form action="/multipart" enctype="multipart/form-data" method="post">
                    <div class="form-group">
                      <label for="boardcode">게시판 코드</label>
                      <select class="form-control" name="boardcode" id="boardcode" onchange="handleOnChange(this)">
                        <option selected disabled>게시판 코드를 선택하세요.</option>
                        <%
                        if(boardCode.length!=0){
                          var i=1;
                          boardCode.forEach(function(data1){
                        %>
                        <option value="<%=data1.code%>"><%=data1.name%></option>
                        <% i++; }) %>
                        <% } else{ %>
                        <option value="board_bin">데이터가 없습니다.</option>
                        <% } %>
                      </select>
                    </div>
                    <div class="form-group">
                      <label for="subject">제목</label>
                      <input type="text" class="form-control" id="subject" name="subject">
                    </div>
                    <div class="form-group">
                      <label for="contents">본문</label>
                      <textarea class="form-control" rows="10" id="contents" name="contents"></textarea>
                    </div>
                    <div class="form-group">
                      <label for="url">출처 URL</label>
                      <input type="text" class="form-control" id="url" name="url">
                    </div>
                    <div class="form-group">
                      <label for="countrycode">국가코드</label>
                      <select class="form-control" name="countrycode" id="countrycode" >
                        <option selected disabled>국가코드를 선택하세요.</option>
                        <%
                        if(countryCode.length!=0){
                          var i=1;
                          countryCode.forEach(function(data2){
                        %>
                        <option value="<%=data2.code%>"><%=data2.name%></option>
                        <% i++; }) %>
                        <% } else{ %>
                        <option value="country_bin">데이터가 없습니다.</option>
                        <% } %>
                      </select>
                    </div>
                    <div class="form-group">
                      <label for="langcode">언어코드</label>
                      <select class="form-control" name="langcode" id="langcode" >
                        <option selected disabled>언어코드를 선택하세요.</option>
                        <%
                        if(langCode.length!=0){
                          var i=1;
                          langCode.forEach(function(data3){
                        %>
                        <option value="<%=data3.code%>"><%=data3.name%></option>
                        <% i++; }) %>
                        <% } else{ %>
                        <option value="lang_bin">데이터가 없습니다.</option>
                        <% } %>
                      </select>
                    </div>
                    <div class="form-group">
                      <label for="date">게시날짜</label>
                      <input type="text" class="form-control" id="date" name="date" placeholder="ex)2022-01-01">
                    </div>
                    <div class="form-group">
                      <label for="UploadFile">Upload</label>
                      <input type="file" id="attachments" name="attachments" multiple>
                      <input type="file" id="attachments" name="attachments" multiple>
                      <input type="file" id="attachments" name="attachments" multiple>
                      <input type="file" id="attachments" name="attachments" multiple>
                      <input type="file" id="attachments" name="attachments" multiple>
                    </div>
                    <input type="submit" class="btn btn-primary" value="등록" onclick="return confirm('등록하시겠습니까?')">
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div> <!-- / .container-fluid -->
    </div><!-- / .wrapper -->
</body>

</html>