<!DOCTYPE html>
<html lang="ko">

<head>
  <%- include('../partials/head');%>

  <!-- 쿼리스트링 URL value값 추출, form action url 스크립트-->
  <script>
    var urlParams = new URL(window.location.href).searchParams;
    var idx = urlParams.get('index');
    var url = "/countrycode/" + idx + "?_method=PUT";

    $(document).ready(function(){
    $("#submitBtn").click(function(){
      $("#edit_proc").attr("action", url);        
      $("#edit_proc").submit(); // 폼 제출
      });
    });
  </script>
</head>

<body>
  <!-- NAVBAR ======================================== -->
  <%- include('../partials/navbar');%>
    <!-- WRAPPER ===================================== -->
    <div class="wrapper">
      <!-- SIDEBAR =================================== -->
      <%- include('../partials/sidebar');%>
        <!-- MAIN CONTENT ========================================= -->
        <div class="container-fluid">
          <div class="row">
            <div class="col-xs-12">
              <h3 class="page-header">
                국가코드 수정
              </h3>
            </div>
          </div> <!-- / .row -->
          <div class="row">
            <div class="col-xs-12">
              <!-- Basic form -->
              <div class="panel panel-default">
                <div class="panel-heading">
                </div>
                <div class="panel-body">
                  <form name="edit_proc" id="edit_proc" action="" method="post">
                    <div class="form-group">
                      <label for="name">이름</label>
                      <input type="text" class="form-control" id="name" name="name">
                    </div>
                    <div class="form-group">
                      <label for="code">코드명</label>
                      <input type="text" class="form-control" id="code" name="code">
                    </div>
                    <button type="button" id="submitBtn" class="btn btn-primary">수정</button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div> <!-- / .container-fluid -->
    </div><!-- / .wrapper -->
</body>

</html>